/* eslint no-console : 0 */

/**
 * Module dependencies.
 */
const app = require("../app");
const http = require("http");

/**
 * Get port from environment and store in Express.
 */
const requestedPort = process.env.PORT;
const port = normalizePort(requestedPort || "0");
const host = process.env.HOST || "127.0.0.1";
app.set("port", port);

/**
 * Create HTTP server.
 */
const server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */
let attemptedFallback = false;
let headlessTimer = null;
server.listen(port, host);
server.on("error", onError);
server.on("listening", onListening);

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */
function onError(error) {
  if (error.syscall !== "listen") {
    throw error;
  }

  const bind = typeof server.address() === "string"
    ? "Pipe " + server.address()
    : `Port ${requestedPort || port}`;

  // handle specific listen errors with friendly messages
  switch (error.code) {
  case "EACCES":
  case "EADDRINUSE":
  case "EPERM":
    if (!attemptedFallback) {
      attemptedFallback = true;
      console.warn(
        `${bind} unavailable (${error.code}). Falling back to an ephemeral port.`,
      );
      return server.listen(0, host);
    }
    if (error.code === "EPERM") {
      enterHeadlessMode(bind, error.code);
      return;
    }
    console.error(`${bind} is unavailable (${error.code})`);
    process.exit(1);
    break;
  default:
    throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */
function onListening() {
  const addr = server.address();
  const displayHost = addr.address === "::" ? "127.0.0.1" : addr.address;
  console.log(`Listening on http://${displayHost}:${addr.port}`);
}

function enterHeadlessMode(bind, code) {
  console.warn(
    `${bind} cannot be opened (${code}). Running in headless mode â€“ no HTTP listener started.`,
  );
  if (!headlessTimer) {
    headlessTimer = setInterval(() => {}, 60 * 1000);
  }
}
